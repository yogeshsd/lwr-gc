<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>lwr</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LWR_REST</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.lwr.software.reporter.restservices</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>LWR_SCHEDULER</servlet-name>
    <servlet-class>com.lwr.software.reporter.servlet.SchedulerServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>  
  <servlet>
    <servlet-name>Test</servlet-name>
    <jsp-file>/JSP/test.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Test</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LWR_REST</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <jsp-file>/JSP/logout.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Login</servlet-name>
    <jsp-file>/JSP/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Home</servlet-name>
    <jsp-file>/JSP/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>New</servlet-name>
    <jsp-file>/JSP/createedit.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>New</servlet-name>
    <url-pattern>/createedit</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Report</servlet-name>
    <jsp-file>/JSP/report.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Report</servlet-name>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ShowGeneratedReport</servlet-name>
    <jsp-file>/JSP/showgeneratedreport.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowGeneratedReport</servlet-name>
    <url-pattern>/showreport</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UserManagement</servlet-name>
    <jsp-file>/ADMIN/usermgmt.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserManagement</servlet-name>
    <url-pattern>/usermgmt</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ConnectionManagement</servlet-name>
    <jsp-file>/ADMIN/connmgmt.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConnectionManagement</servlet-name>
    <url-pattern>/connmgmt</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ScheduleManagement</servlet-name>
    <jsp-file>/ADMIN/schedmgmt.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ScheduleManagement</servlet-name>
    <url-pattern>/schedmgmt</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Profile</servlet-name>
    <jsp-file>/JSP/profile.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Profile</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>GetStarted</servlet-name>
    <jsp-file>/JSP/getstarted.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetStarted</servlet-name>
    <url-pattern>/getstarted</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ChartSample</servlet-name>
    <jsp-file>/JSP/chartsample.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChartSample</servlet-name>
    <url-pattern>/chartsample</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>About</servlet-name>
    <jsp-file>/JSP/about.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>About</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SaveReport</servlet-name>
    <servlet-class>com.lwr.software.reporter.servlet.SaveReportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveReport</servlet-name>
    <url-pattern>/savereport</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DoLogin</servlet-name>
    <servlet-class>com.lwr.software.reporter.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DoLogin</servlet-name>
    <url-pattern>/doLogin</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>com.lwr.software.reporter.security.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <security-constraint>
    <display-name>Restrict direct access to certain folders</display-name>
    <web-resource-collection>
      <web-resource-name>Restricted folders</web-resource-name>
      <url-pattern>/JSP/*</url-pattern>
    </web-resource-collection>
    <auth-constraint/>
  </security-constraint>
</web-app>